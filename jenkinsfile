pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    stages {
        stage('Cloning repo') {
            steps {
                git 'https://github.com/Petegichana/gallery.git'
            }
        }
        
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('tests') {
            steps {
                sh 'npm test'
            }
        }
        post {
            success {
                emailext (
                    subject: "Pipeline Successful",
                    body: "Your Jenkins pipeline succeeded. Good job!",
                    recipientProviders: [[$class: 'CulpritsRecipientProvider']],
                    to: "pjgichana@gmail.com"
                )
            }
            failure {
                emailext (
                    subject: "Pipeline Failed",
                    body: "Your Jenkins pipeline has failed. Please investigate.",
                    recipientProviders: [[$class: 'CulpritsRecipientProvider']],
                    to: "pjgichana@gmail.com"
                )
            }
    }
}
}