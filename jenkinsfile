pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    stages {
        stage('Cloning repo') {
            steps {
                git 'https://github.com/Petegichana/gallery.git'
            }
        }
        
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Tests') {
            steps {
                sh 'npm test'
            }
            post {
                success {
                    emailext (
                        subject: 'Test Results: Successful',
                        body: 'The tests were successful.',
                        recipientProviders: [[$class: 'DevelopersRecipientProvider']],
                    )
                }
            }
        }
    }
}
