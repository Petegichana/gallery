pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    stages {
        stage('Cloning repo') {
            steps {
                git 'https://github.com/Petegichana/gallery.git'
            }
        }
        
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Tests') {
            steps {
                script {
                    def testExitCode = sh(script: 'npm test', returnStatus: true)
                    
                    if (testExitCode != 0) {
                        currentBuild.result = 'FAILURE'
                        emailext subject: "Test Failure in Jenkins Build ${BUILD_NUMBER}",
                            body: "The tests in Jenkins build ${BUILD_NUMBER} have failed. Please investigate.",
                            to: 'ptahgich177@gmail.com', // Replace with the recipient email address
                            attachLog: true
                    } else {
                        emailext subject: "Jenkins Build ${BUILD_NUMBER} Successful",
                            body: "The Jenkins build ${BUILD_NUMBER} was successful.",
                            to: 'ptahgich177@gmail.com', // Replace with the recipient email address
                            attachLog: true
                    }
                }
            }
        }
    }
}
