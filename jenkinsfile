pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    stages {
        stage('Cloning repo') {
            steps {
                git 'https://github.com/Petegichana/gallery.git'
            }
        }
        
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('tests') {
            steps {
                sh 'npm test'
            }
            
            post {
                failure {
                    emailext (
                        subject: "Pipeline Failed ${currentBuild.result}: ${currentBuild.fullDisplayName}",
                        body: "Your Jenkins pipeline is done ${currentBuild.result}",
                        to: "pjgichana@gmail.com"
                    )
                }
            }
        }
    }
}
