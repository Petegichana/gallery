pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    stages {
        stage('Cloning repo') {
            steps {
                git 'https://github.com/Petegichana/gallery.git'
            }
        }
        
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Tests') {
            steps {
                script {
                    sh(script: 'npm test', returnStatus: true)
    
                    {
                        emailext subject: "Jenkins Build ${BUILD_NUMBER} Successful",
                            body: "The Jenkins build ${BUILD_NUMBER} was successful.",
                            to: 'ptahgich177@gmail.com', // Replace with the recipient email address
                            attachLog: true
                    }
                }
            }
        }
    }
}
