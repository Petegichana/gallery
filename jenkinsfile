pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    stages {
        stage('Cloning repo') {
            steps {
                git 'https://github.com/Petegichana/gallery.git'
            }
        }
        
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('tests') {
            steps {
                sh 'npm test'
            }
            
            post {
                always {
            emailext body: 'A Test EMail',
            recipientProviders: [[$class: 'DevelopersRecipientProvider'] , [$class: 'RequesterRecipientProvider']], 
            subject: 'Test'
        }
    }
                }
        }
    }
}
