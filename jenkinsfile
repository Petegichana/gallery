pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS'
    }
    
    stages {
        stage('Cloning repo') {
            steps {
                git 'https://github.com/Petegichana/gallery.git'
            }
        }
        
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }   
        stage('Tests') {
            steps {
                script {
                    def testResult = sh(script: 'npm test', returnStatus: true)
                    if (testResult != 0) {
                        currentBuild.result = 'FAILURE'
                        emailext subject: "Test Failed: ${env.JOB_NAME}",
                                  body: "The tests for ${env.JOB_NAME} have failed. Please check the build for more details.",
                                  to: 'ptahgich177@gmail.com',
                                  attachLog: true,
                                  recipientProviders: [[$class: 'CulpritsRecipientProvider']]
                    }
                }
            }
        }
    }
    post {
        failure {
            emailext subject: "Pipeline Failed: ${env.JOB_NAME}",
                      body: "The pipeline for ${env.JOB_NAME} has failed. Please investigate the issue.",
                      to: 'ptahgich177@gmail.com'
        }
    }

    stage("Slack") {
            steps {
                slackSend channel: "#petergichana_ip1", message: "Deployment Succesful: ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}>)"
                }
            }
}
